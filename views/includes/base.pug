doctype html
html
    include head
    body
        block main
            nav.navbar.navbar-expand-lg.bg-light
                .container-fluid.me-auto
                    a.navbar-brand(href='#') Ehrenbank
                    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                        span.navbar-toggler-icon
                    #navbarNav.collapse.navbar-collapse
                        ul.navbar-nav
                            li.nav-item
                                a.nav-link.active(href='/') Home
                            if user != null
                                li.nav-item
                                    a.nav-link.disabled(href='apps') Shop
                                li.nav-item
                                    a.nav-link.disabled(href='items') Items
                        ul.navbar-nav.ms-auto
                            if user != null
                                li.nav-item
                                    a.nav-link.active Angemeldet als #{user.username}
                                li.nav-item
                                    a.nav-link(href='/logout') Abmelden
                            else
                                li.nav-item
                                    a.nav-link(href='/login') Anmelden
            block content