extends ../extends/hero
block title
    | Admin
block subtitle
    | Hier kannst du die Ehrenbank verwalten.
block content
    .container.mt-4
        .row
            .col-md-6
                .card.mb-4
                    .card-header
                        h5.card-title
                            | Werbung
                    .card-body
                        .card-text
                            p Hier kannst du Werbung auf der Startseite verwalten.
                            a(href="/admin/promotions").btn.btn-primary Werbungen verwalten
            .col-md-6
                .card.mb-4
                    .card-header
                        h5.card-title
                            | Apps
                    .card-body
                        .card-text
                            p Hier kannst du Apps verwalten.
                            a(href="/admin/apps/").btn.btn-primary Apps verwalten
        .card.mb-4
            .card-header
                h5.card-title
                    | Benutzer
            .card-body
                .card-text
                    if !users || users.length === 0
                        p Es sind keine Benutzer vorhanden.
                    else
                        p Hier ist eine Tabellenansicht aller Benutzer.
                        table.table.table-striped.table-hover
                            thead
                                tr
                                    th(scope="col") User-ID
                                    th(scope="col") Displayname
                                    th(scope="col") Ehre
                                    th(scope="col") Guard-ID
                                    th(scope="col") Erstellt
                                    th(scope="col") Zuletzt angemeldet
                            tbody
                                each u in users
                                    tr
                                        td(scope="row")= u.user_id
                                        td= u.displayname
                                        td= u.balance
                                        td
                                            code.text-success=u.guard_id
                                        td= new Date(u.created_at).toLocaleString("de-DE")
                                        td= new Date(u.last_login).toLocaleString("de-DE")
